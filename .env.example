# SafeZonePH Environment Variables
# Copy this file to .env.local and fill in the values

# App Configuration
REACT_APP_NAME=SafeZonePH
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# API Configuration
# For local development: http://localhost:8000
# For production on Vercel: leave empty (will use relative /api URLs)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Backend Environment Variables (Set in Vercel Dashboard for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database URL
# For local: sqlite:///./safezoneph_dev.db
# For production: postgresql://user:password@host:port/database (use Vercel Postgres)
DATABASE_URL=sqlite:///./safezoneph_dev.db

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key-here
REACT_APP_SESSION_EXPIRY=86400

# Firebase Configuration (for push notifications)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=

# Google Maps API (for location features)
REACT_APP_GOOGLE_MAPS_API_KEY=

# Analytics
REACT_APP_GA_TRACKING_ID=

# Feature Flags
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false
REACT_APP_ENABLE_REAL_TIME_CHAT=false
REACT_APP_ENABLE_LOCATION_SERVICES=false

# Emergency Services
REACT_APP_EMERGENCY_HOTLINE=911
REACT_APP_NDRRMC_HOTLINE=8911-1406
